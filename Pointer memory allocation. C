#include <stdio.h>
#include <stdlib.h>
int main() {
    int *ptr;
    int n, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    ptr = (int *)malloc(n * sizeof(int));
    if (ptr == NULL) {
        printf("Memory not allocated!\n");
        return 0;
    }
    printf("Memory allocated successfully.\n");
    for (i = 0; i < n; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &ptr[i]);
    }
    printf("\nEntered elements:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", ptr[i]);
    }
    return 0;
}
